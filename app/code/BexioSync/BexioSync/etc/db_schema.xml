<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
	<table name="sales_order" resource="sales" engine="innodb" comment="Sales Order">
		<column xsi:type="varchar" name="external_order_id" nullable="true" length="255" comment="External Order Id" />
		<column xsi:type="varchar" name="external_order_source" nullable="true" length="255" comment="External Order Source" />
	</table>
	<table name="sales_order_grid" resource="sales" engine="innodb" comment="Sales Order Grid">
		<column xsi:type="varchar" name="external_order_id" nullable="true" length="255" comment="External Order Id" />
	</table>
	<table name="customer_entity" comment="Customer Entity">
		<column xsi:type="varchar" name="external_customer_id" nullable="true" length="255" comment="External Customer Id" />
		<column xsi:type="varchar" name="external_customer_source" nullable="true" length="255" comment="External Customer Source" />
	</table>
</schema>
