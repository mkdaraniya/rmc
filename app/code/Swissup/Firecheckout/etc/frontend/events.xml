<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="layout_load_before">
        <observer name="swissup_firecheckout_add_class_name" instance="Swissup\Firecheckout\Observer\AddPageClassName" />
        <observer name="swissup_firecheckout_prepare_layout" instance="Swissup\Firecheckout\Observer\PrepareLayout" />
    </event>
    <event name="layout_generate_blocks_after">
        <observer name="swissup_firecheckout_add_assets" instance="Swissup\Firecheckout\Observer\AddAssets" />
        <observer name="swissup_firecheckout_add_js_bundles" instance="Swissup\Firecheckout\Observer\AddJsBundles" />
    </event>
    <event name="checkout_cart_add_product_complete">
        <observer name="swissup_firecheckout_redirect_to_checkout" instance="Swissup\Firecheckout\Observer\RedirectToCheckout" />
    </event>
</config>
