<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="checkout.root">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="firecheckout" xsi:type="array">
                            <item name="config" xsi:type="array">
                                <item name="plugins" xsi:type="array">
                                    <item name="payment_popup_unblock" xsi:type="array">
                                        <item name="params" xsi:type="array">
                                            <item name="0" xsi:type="array">
                                                <item name="magento_braintree_paypal" xsi:type="array">
                                                    <item name="paymentCode" xsi:type="string">braintree_paypal</item>
                                                    <item name="model" xsi:type="string">Swissup_FirecheckoutIntegrations/js/magento-braintree-paypal/popup-unblocker</item>
                                                    <item name="windowName" xsi:type="string">PPFrameRedirect</item>
                                                    <item name="windowFeatures" xsi:type="string">height=535,width=450,resizable,scrollbars</item>
                                                    <item name="center" xsi:type="boolean">true</item>
                                                </item>
                                            </item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
