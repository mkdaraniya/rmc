<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="Swissup\Orderattachment\Api\Data\AttachmentInterface"
                type="Swissup\Orderattachment\Model\Attachment" />
    <preference for="Swissup\Orderattachment\Api\Data\AttachmentSearchResultsInterface"
                type="Magento\Framework\Api\SearchResults" />
    <preference for="Swissup\Orderattachment\Api\AttachmentRepositoryInterface"
                type="Swissup\Orderattachment\Model\AttachmentRepository" />
    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="orderattachment_attachment_listing_data_source" xsi:type="string">Swissup\Orderattachment\Model\ResourceModel\Attachment\Grid\Collection</item>
            </argument>
        </arguments>
    </type>
    <type name="Swissup\CheckoutSuccess\Model\Config\Source\AvailableBlocks">
        <arguments>
            <argument name="options" xsi:type="array">
                <item name="order.attachement" xsi:type="string" translate="true">Order Attachment</item>
            </argument>
        </arguments>
    </type>
    <type name="Swissup\Orderattachment\Model\ResourceModel\Attachment\Grid\Collection">
        <arguments>
            <argument name="mainTable" xsi:type="string">swissup_orderattachment</argument>
            <argument name="eventPrefix" xsi:type="string">orderattachment_attachment_grid_collection</argument>
            <argument name="eventObject" xsi:type="string">orderattachment_attachment_grid_collection</argument>
            <argument name="resourceModel" xsi:type="string">Swissup\Orderattachment\Model\ResourceModel\Attachment</argument>
        </arguments>
    </type>
    <virtualType name="SwissupOrderattachmentGridFilterPool" type="Magento\Framework\View\Element\UiComponent\DataProvider\FilterPool">
        <arguments>
            <argument name="appliers" xsi:type="array">
                <item name="regular" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\RegularFilter</item>
                <item name="fulltext" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\FulltextFilter</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="SwissupOrderattachmentGridDataProvider" type="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider">
        <arguments>
            <argument name="collection" xsi:type="object" shared="false">Swissup\Orderattachment\Model\ResourceModel\Attachment\Collection</argument>
            <argument name="filterPool" xsi:type="object" shared="false">SwissupOrderattachmentGridFilterPool</argument>
        </arguments>
    </virtualType>
</config>
