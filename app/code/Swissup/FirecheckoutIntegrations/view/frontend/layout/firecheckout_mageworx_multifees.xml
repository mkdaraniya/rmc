<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="checkout.root">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="firecheckout" xsi:type="array">
                            <item name="config" xsi:type="array">
                                <item name="plugins" xsi:type="array">
                                    <item name="mageworx_multifees" xsi:type="array">
                                        <item name="plugin" xsi:type="string">Swissup_FirecheckoutIntegrations/js/mageworx-multifees</item>
                                        <item name="pluginDisabled" xsi:type="helper" helper="Swissup\Firecheckout\Helper\Data::isMultistepLayout"/>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
